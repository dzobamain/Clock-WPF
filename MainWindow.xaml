<Window x:Class="Clock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Clock" Height="500" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">
    <Grid>
        <Ellipse Width="500" Height="500">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="White" Offset="0.0"/>
                    <GradientStop Color="Black" Offset="1.3"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Border Width="500" Height="500" BorderThickness="4" CornerRadius="250">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop x:Name="Off1" Color="Black" Offset="0.1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
        </Border>
        
        
    </Grid>
</Window>